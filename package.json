{
  "name": "talentenraad",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--no-node-snapshot --trace-deprecation' next dev",
    "build": "cross-env NODE_OPTIONS='--no-node-snapshot' next build",
    "start": "cross-env NODE_OPTIONS='--no-node-snapshot' next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:xo": "xo --ignore='__tests__/**' --ignore='e2e/**' --ignore='scripts/**' --ignore='generated/**' --ignore='*.config.*' --ignore='jest.*.tsx' --ignore='instrumentation.ts'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test accessibility.spec.ts",
    "test:cls": "playwright test layout-shift.spec.ts",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^4.14.0",
    "@builder.io/admin-sdk": "^0.0.8",
    "@builder.io/sdk-react-nextjs": "^0.24.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@flags-sdk/hypertune": "^0.3.2",
    "@sentry/nextjs": "^10.0.0",
    "@serwist/next": "^9.3.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-bubble-menu": "^3.14.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/edge-config": "^1.4.3",
    "@vercel/postgres": "^0.10.0",
    "@vercel/speed-insights": "^1.3.1",
    "drizzle-orm": "^0.45.1",
    "flags": "^4.0.2",
    "hypertune": "^2.10.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.6.0",
    "server-only": "^0.0.1",
    "simple-icons": "^16.2.0",
    "sonner": "^2.0.7",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@builder.io/cli": "^1.2.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.0",
    "@playwright/test": "^1.57.0",
    "@serwist/turbopack": "^9.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web-push": "^3.6.4",
    "cross-env": "^10.0.0",
    "daisyui": "^5.5.13",
    "drizzle-kit": "^0.31.8",
    "esbuild-wasm": "^0.27.2",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.0.0",
    "serwist": "^9.3.0",
    "tailwindcss": "^4.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "xo": "^1.2.3"
  },
  "xo": {
    "space": true,
    "ignores": [
      "__tests__/**",
      "e2e/**",
      "playwright.config.ts",
      "jest.config.ts",
      "jest.setup.tsx",
      "jest.env.setup.ts",
      "commitlint.config.js",
      "eslint.config.mjs",
      "scripts/**",
      "proxy.ts",
      "instrumentation.ts",
      "public/sw.js",
      "generated/**"
    ],
    "rules": {
      "@eslint-community/eslint-comments/require-description": [
        "error",
        {
          "ignore": [
            "eslint-enable"
          ]
        }
      ],
      "@eslint-community/eslint-comments/no-unlimited-disable": "error",
      "@eslint-community/eslint-comments/no-duplicate-disable": "error",
      "n/prefer-global/process": "off",
      "import-x/extensions": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/no-restricted-types": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/no-confusing-void-expression": "off",
      "@stylistic/jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "new-cap": "off",
      "no-await-in-loop": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-global-this": "off",
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "kebabCase": true,
            "pascalCase": true
          }
        }
      ],
      "unicorn/no-nested-ternary": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/prefer-query-selector": "off",
      "import-x/first": "off",
      "import-x/no-duplicates": "off",
      "import-x/no-unassigned-import": "off",
      "no-void": "off",
      "no-alert": "off",
      "@stylistic/no-mixed-operators": "off",
      "@stylistic/multiline-ternary": "off",
      "@stylistic/function-paren-newline": "off",
      "promise/prefer-await-to-then": "off",
      "@typescript-eslint/no-base-to-string": "off",
      "@typescript-eslint/use-unknown-in-catch-callback-variable": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/member-ordering": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "promise/param-names": "off",
      "no-restricted-globals": "off",
      "unicorn/prefer-code-point": "off",
      "unicorn/prefer-single-call": "off",
      "unicorn/prefer-set-has": "off"
    }
  },
  "overrides": {
    "@eslint/plugin-kit": "^0.6.0",
    "lodash": "^4.17.23",
    "node-fetch": "^3.0.0",
    "esbuild": "^0.27.0"
  }
}
